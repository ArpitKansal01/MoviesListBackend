generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  username String
  email    String   @unique
  password String
  movies   Movie[]
}

model Movie {
  id        Int      @id @default(autoincrement())
  title     String
  type      String
  director  String?
  budget    Float?
  location  String?
  duration  String?
  year      Int?
  posterUrl String?
  createdAt DateTime @default(now())
  createdBy User      @relation(fields: [createdById], references: [id])
  createdById Int
}
